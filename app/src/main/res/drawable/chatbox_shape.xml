<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Set the background color -->
    <corners android:radius="16dp" /> <!-- Set the corner radius -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp" /> <!-- Optional: Add padding inside the shape -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" /> <!-- Optional: Add a border around the shape -->
</shape>

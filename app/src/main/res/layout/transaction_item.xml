<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/transaction_item_container"
    android:layout_margin="2dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_image"
        android:orientation="vertical">

        <!-- Order Status -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@color/dark_green"
                android:elevation="10dp"
                android:padding="3dp"
                android:text="Status : Pending"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:elevation="10dp"
                android:text="1000"
                android:textColor="@color/dark_green"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content">
            <!-- Product Name -->
            <TextView
                android:id="@+id/tvTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="tvTransactionId"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Order ID  -->
            <TextView
                android:id="@+id/OrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTransactionId"
                android:paddingBottom="4dp"
                android:text="Order ID: #123456789 "
                android:textColor="#626161"
                android:textSize="12sp" />

            <!-- Order Date -->
            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/OrderID"
                android:paddingBottom="4dp"
                android:text="Date: 2024-11-03"
                android:textColor="#626161"
                android:textSize="12sp" />

            <!-- Quantity and Total Amount -->
            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTransactionDate"
                android:paddingBottom="4dp"
                android:text="Online"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:id="@+id/order_item"
    android:padding="16dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:padding="2dp"
        android:layout_height="80dp"
        android:src="@drawable/user_avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:layout_toEndOf="@id/product_image"
        android:orientation="vertical">

        <!-- Order Status -->
        <TextView
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/dark_green"
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Status : Pending"
            android:textStyle="italic" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Product Name"
            android:layout_below="@+id/tvOrderStatus"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Order ID  -->
        <TextView
            android:id="@+id/OrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductName"
            android:paddingBottom="4dp"
            android:text="Order ID: #123456789 "
            android:textColor="#626161"
            android:textSize="12sp" />

        <!-- Order Date -->
        <TextView
            android:id="@+id/orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OrderID"
            android:paddingBottom="4dp"
            android:text="Date: 2024-11-03"
            android:textColor="#626161"
            android:textSize="12sp" />

        <!-- Quantity and Total Amount -->
        <TextView
            android:id="@+id/tvQuantityAndTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderDate"
            android:paddingBottom="4dp"
            android:text="Quantity: 2 - Total: â‚¹500.00"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>
</RelativeLayout>

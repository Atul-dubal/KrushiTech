<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1FBE5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Order_Confirm_Activity">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/crackers_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleY="2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/crackers_animation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/check_mark_animation"
                android:layout_width="250dp"
                android:layout_height="250dp"
android:layout_marginBottom="-40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/check_mark" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/orer_confirm_animation"
                android:layout_width="300dp"
                android:layout_height="300dp"

                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/order_confirm" />


            <Button
                android:id="@+id/continueShoppingBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/dark_green"
                android:text="Continue Shopping" />

            <TextView
                android:id="@+id/viewOrdersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="View Orders"
                android:textAlignment="center"
                android:textColor="@color/dark_green"
                android:textStyle="bold" />

            <View
                android:layout_width="78dp"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp"
                android:background="@color/dark_green" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
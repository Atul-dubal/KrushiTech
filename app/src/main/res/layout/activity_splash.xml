<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_green"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/nature_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00454444" />
    </RelativeLayout>
    <!--    <TextView-->
    <!--        android:id="@+id/splash_name_text"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_above="@id/app_logo_img"-->
    <!--        android:text="AgriTech"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textColor="@color/primary_dark"-->
    <!--        android:textSize="40sp" />-->

    <TextView
        android:id="@+id/splash_screen_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_logo_img"
        android:layout_marginVertical="25dp"
        android:text="सुस्वागतम"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="1000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/app_logo_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/user_avatar" />

    <TextView
        android:id="@+id/splash_screen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo_img"
        android:layout_marginVertical="25dp"
        android:text="@string/jay_jawan_jay_kisan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="1000"
        android:textSize="20sp" />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/splash_screen_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>